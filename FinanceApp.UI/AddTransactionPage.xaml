<Page x:Class="FinanceApp.UI.AddTransactionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:FinanceApp.UI"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      Background="#1B1B2F" Height="408" Width="657">

    <Grid>
        <!-- Фон -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#1B1B2F" Offset="0"/>
                <GradientStop Color="#3B0A66" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Контент -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
            <TextBlock Text="Add a record" FontSize="18" Foreground="White" FontFamily="Courier New" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Amount -->
            <TextBox x:Name="AmountTextBox" Width="200" Height="30" TextAlignment="Center"
                     FontSize="16" Background="Transparent" BorderBrush="White" Foreground="White"
                     FontFamily="Courier New" BorderThickness="0,0,0,1" Margin="0,0,0,10"/>

            <!-- Category -->
            <ComboBox x:Name="TransactionTypeComboBox" Margin="0,0,0,10" SelectionChanged="TransactionTypeComboBox_SelectionChanged">
                <ComboBoxItem Content="Expense" IsSelected="True"/>
                <ComboBoxItem Content="Income"/>
            </ComboBox>

            <ComboBox x:Name="CategoryComboBox" Margin="0,0,0,10"/>

            <!-- Дата -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10">
                <Image Source="Assets/Icons/calendar.png" Width="24" Height="24" Margin="0,0,10,0"/>
                <DatePicker x:Name="TransactionDatePicker" Width="140" />
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <!-- Confirm -->
                <Button Width="40" Height="40" Background="White" Click="Confirm_Click" Margin="10,0">
                    <TextBlock Text="✔" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <!-- Cancel -->
                <Button Width="40" Height="40" Background="White" Click="Cancel_Click" Margin="10,0">
                    <TextBlock Text="✖" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Стрілка повернення -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="Back_Click"
                Background="Transparent" BorderThickness="0">
            <TextBlock Text="➜" FontSize="24" Foreground="White"/>
        </Button>
    </Grid>
</Page>