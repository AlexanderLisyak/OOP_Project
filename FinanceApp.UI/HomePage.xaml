<Page x:Class="FinanceApp.UI.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FinanceApp.UI.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Page.Resources>
        <local:AmountColorConverter x:Key="AmountColorConverter"/>
        <local:CategoryToImagePathConverter x:Key="CategoryToImagePathConverter"/>
    </Page.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        
        <StackPanel Grid.Column="0" Margin="30">
            <TextBlock Text="My finances" FontSize="28" Foreground="White" FontWeight="SemiBold"/>

            
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock Text="General balance:" FontSize="20" Foreground="White"/>
                <TextBlock Text="{Binding TotalBalance, StringFormat='{}{0:N2}'}" FontSize="20" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
                <TextBlock Text="{Binding SelectedCurrency}" FontSize="20" Foreground="White" FontWeight="Bold" Margin="5,0,0,0"/>
            </StackPanel>

            
            <TextBlock Text="Costs by category" Margin="0,20,0,0" FontSize="18" Foreground="LightGray"/>
            <ItemsControl ItemsSource="{Binding CategoryTotals}" Margin="0,10,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="Center" Margin="0,0,10,10">
                            <Ellipse Width="50" Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding Key, Converter={StaticResource CategoryToImagePathConverter}}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="{Binding Key}" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding Value, StringFormat='{}{0:N2}'}" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        
        <Border Grid.Column="1" Margin="20,20,20,113" Background="#FF1F1D2B" CornerRadius="8" Padding="15">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Recent transactions" FontSize="18" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>

                <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding RecentTransactions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Category}" Foreground="White"/>
                                <TextBlock Text="{Binding Date, StringFormat=d}" Foreground="LightGray" Grid.Column="1" Margin="10,0"/>
                                <TextBlock Text="{Binding Amount, StringFormat=N2}" Foreground="{Binding Converter={StaticResource AmountColorConverter}}" Grid.Column="2" Margin="10,0"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Height="80" Background="Black" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            

            <Button Width="60" Height="60" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Background="#fff" BorderThickness="0" Style="{StaticResource CircleButtonStyle}" Click="AddTransactionButton_Click">
                <TextBlock Text="+" FontSize="32" Foreground="#000" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>

            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

            <Button DockPanel.Dock="Right" Width="40" Margin="10" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="SettingsButton_Click">
                <Image Source="/Assets/Icons/settings.png" Width="24" Height="24"/>
            </Button>
        </DockPanel>
    </Grid>
</Page>